---
import BaseHead from '../../components/BaseHead.astro'
import Cool from '../../components/Author.astro'

const description="I'm still building so there's not much to see.";
const title="Hello world!"
const publishDate="13 June 2022"
const name="Jamie Smith"
---

<html>

  <head>
    <BaseHead {title} {description} />
    <script type="text/javascript">
      var MTUserId='8211b140-2c22-4666-aae1-7c158d8c40d5';
      var MTFontIds=new Array();

      MTFontIds.push("1141825"); // ITC Pioneerâ„¢ W01 Regular 
      (function() {
        var mtTracking=document.createElement('script');
        mtTracking.type='text/javascript';
        mtTracking.async='true';
        mtTracking.src='../assets/design-assets/mtiFontTrackingCode.js';

        (document.getElementsByTagName('head')[0]||document.getElementsByTagName('body')[0]).appendChild(mtTracking);
      })();
    </script>

    <style>
      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-top: 4rem;
        margin-bottom: 8rem;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .intro {
        padding-bottom: 4rem;
        margin-bottom: 2rem;
        border-bottom: 4px solid var(--theme-divider);
      }
    </style>
  </head>

  <body>
    <div class="wrapper">
      <section class="content">
        <Cool name={name} href="https://twitter.com/mynameisjamie"
          client:load />
        <div>
          <span> This site is being built with: </span>
          <ul>
            <li>
              <a href="http://astro.build">Astro</a>
            </li>
            <li>
              <a href="https://ghost.org">Ghost</a>
            </li>
            <li>
              <a href="http://www.digitalocean.com">Digital Ocean</a>
            </li>
            <li>
              <a href="http://www.netlify.com">Netlify</a>
            </li>
          </ul>
        </div>
      </section>
    </div>
  </body>

</html>